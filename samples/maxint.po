class Program is
    method MaxInt(a: IntArray) : Integer

    this() is
        var arr : IntArray(5)
        arr.set(0, 0)
        arr.set(1, 1)
        arr.set(2, 2)
        arr.set(3, 3)
        arr.set(4, 4)
        return MaxInt(arr)
    end

    method MaxInt(a: IntArray) : Integer is
        var max : Integer.Min
        var i : Integer(1)
        while i.Less(a.Length) loop
            if a.get(i).Greater(max) then
                max := get(i)
            end
            i := i.Plus(1)
        end
        return max
    end
end
